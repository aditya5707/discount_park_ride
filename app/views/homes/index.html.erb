<div class="container">
  <div class="wrapper">
    <%	[:notice, :error, :alert].each do |level|  %>
        <%	unless flash[level].blank?  %>
        <div class="messages">
        <%=	content_tag :p, flash[level] %>
        </div>
        <%	 end %>
    <%	end  %>
    <h1 class="logo" title="Discount Park & Ride - Coming soon"></h1>

<h2 class="heading">Book. Park. Save.</h2>

<p>Sign up for advanced notice of services & discounts from Discount Park and Ride - the economic and secure way to book long term parking online.</p>
    <%= form_tag(send_mail_homes_path, :class => "defaultForm", :method => "GET") do %>
        <div class="fieldBlock">
          <%= text_field_tag :email,"", :placeholder => "Enter your e-mail"   %>
          <%= button_tag "Stay Informed", :class=>"btn blueBtn", :id => "send_request"%>
        </div>
    <% end	  %>
    <p class="error_message" style="display:none;color: red;">Please Enter Valid Email <p>
    <p>For all press inquiries, please contact us at <a href="mailto:press@discountparkandride.com">press@discountparkandride.com</a>
    </p>

    <p>If you have an airport or seaport parking lot and would like to be featured on Discount Park and Ride, please
      email us at <a href="mailto:partners@discountparkandride.com">partners@discountparkandride.com</a></p>

    <div class="hrLine"></div>

    <ul class="networkingIcons clearfix">
      <li><a href="http://www.facebook.com/DiscountParkAndRideInc" target="_blank" class="facebook" title="Facebook"></a></li>
      <li><a href="https://twitter.com/DPRLLC" class="twitter" target="_blank" title="Twitter"></a></li>
    </ul>

  </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
      $(".messages").fadeOut(4000);
      $("#send_request").on("click",function(){
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        if($("#email").val() == "" || !emailReg.test($("#email").val())){
          $(".error_message").show();
          $(".error_message").fadeOut(4000);
          return false;
        }
      });
    });
</script>
